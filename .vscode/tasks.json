{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Frontend: Build",
			"type": "shell",
			"command": "cd frontend && npm run build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc",
				"$eslint-stylish"
			]
		},
		{
			"label": "Frontend: Test All",
			"type": "shell",
			"command": "cd frontend && npm run test",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Frontend: Test Unit Only",
			"type": "shell",
			"command": "cd frontend && npm run test:unit",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Frontend: Test Unit Run Once",
			"type": "shell",
			"command": "cd frontend && npm run test:unit:run",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Frontend: Test All Run Once",
			"type": "shell",
			"command": "cd frontend && npm run test:run",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Frontend: Test Integration",
			"type": "shell",
			"command": "cd frontend && npm run test:run __tests__/integration/",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Backend: Start Dev Server",
			"type": "shell",
			"command": "cd backend/go && go run cmd/v1/session/main.go",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Backend: Test All",
			"type": "shell",
			"command": "cd backend/go && go test ./...",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Backend: Test Verbose",
			"type": "shell",
			"command": "cd backend/go && go test -v ./...",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Backend: Test with Coverage",
			"type": "shell",
			"command": "cd backend/go && go test -cover ./...",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Backend: Test Session Package",
			"type": "shell",
			"command": "cd backend/go && go test -v ./internal/v1/session/",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Backend: Test Auth Package",
			"type": "shell",
			"command": "cd backend/go && go test -v ./internal/v1/auth/",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Test: Full Codebase",
			"type": "shell",
			"command": "echo 'Running Full Codebase Tests...' && echo 'Testing Frontend...' && cd frontend && npm run test:run && echo 'Frontend tests completed!' && echo 'Testing Backend...' && cd ../backend/go && go test ./... && echo 'backend tests completed!' && echo 'All tests completed successfully.'",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}